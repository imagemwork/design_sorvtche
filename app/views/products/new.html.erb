<h1>New product</h1>

<% form_for :product, @product, :url => products_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :codigo %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>
  <p>
    <%= f.label :ingredientes %><br />
    <%= f.text_area :ingredients %>
  </p>
  <p>
  	<%= f.file_field :produto %>
  </p>
  <p>
    <%= f.label :categorias %><br />
    <%= f.collection_select :categories_id, Category.all, :id, :title %>
  </p>
  <br />
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
