		<title> Sorvtche - <%= yield(:title) %> </title>
		
		<%= javascript_include_tag "jquery", "s3Slider" %>

		<script type="text/javascript" language="javascript">
			if (screen.width == "1024") {
				document.write('<%= stylesheet_link_tag "1024" %>');
				document.write('<%= stylesheet_link_tag "slider" %>');
				document.write('<%= stylesheet_link_tag "lightbox" %>');
			}
			else {
				document.write('<%= stylesheet_link_tag "index" %>');
				document.write('<%= stylesheet_link_tag "slider" %>');
				document.write('<%= stylesheet_link_tag "lightbox" %>');
			}
		</script>

