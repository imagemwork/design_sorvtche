<%- title("Envie sua receita")%>
<%- selected(:recipes) %>

<h3 class="titulos">	» Envie sua receita</h3>
<br />

<div id="form-receitas">
	<% form_for(@recipe) do |f| %>

	<% if flash[:error_contact] %>
	 	<div id="error_contact">
			<%= flash[:error_contact] %>
		</div>
	<% end %>


		  <%= f.label("Seu nome: <br/> <small>obrigatório</small>") %>
		  <%= f.text_field :person_name, :class => "input-text" %>


		   <%= f.label("Seu e-mail: <br/> <small>obrigatório</small>") %>
		  <%= f.text_field :email, :class => "input-text" %>


		   <%= f.label("Receita: <br/> <small>obrigatório</small>") %>
		  <%= f.text_field :name, :class => "input-text" %>


		   <%= f.label("Ingredientes: <br/> <small>obrigatório</small>") %>
		  <%= f.text_area :ingredients, :rows => 5, :style => "overflow: auto;", :class => "textarea-contato"%>


		   <%= f.label("Preparo: <br/> <small>obrigatório</small>") %>
		  <%= f.text_area :preparation, :rows => 5, :style => "overflow: auto;", :class => "textarea-contato" %>


		   <%= f.label("Dicas: <br/> <small>opcional</small>") %>
		  <%= f.text_area :tip, :rows => 5, :style => "overflow: auto;", :class => "textarea-contato" %>


			<%= hidden_field_tag "recipe[passed]", "false" %>

			<br />
		  <%= f.submit 'Enviar', :class => "button-login" %>

	<% end %>
</div>

