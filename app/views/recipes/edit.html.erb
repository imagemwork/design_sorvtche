<h1>Editing recipe</h1>

<% form_for(@recipe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ingredients %><br />
    <%= f.text_area :ingredients %>
  </p>
  <p>
    <%= f.label :preparation %><br />
    <%= f.text_area :preparation %>
  </p>
  <p>
    <%= f.label :tip %><br />
    <%= f.text_area :tip %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>