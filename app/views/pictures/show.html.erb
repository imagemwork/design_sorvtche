<%- title(@event.title) %>
<%- selected(:eventos) %>
<%- javascripts_normal("jquery.lightbox-0.5")%>
<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		$('#fuck a').lightBox();
	})
</script>


<div id="textevent">
	<% @textevent.each do |t| %>
	
	<h3><%= t.title %><small> - <%= t.location %>, <%= t.city %></small></h3><small>(<%= t.created_at.strftime("%d/%m/%Y") %>)</small>
		
		<%= t.description %>
	<% end %>
</div>

<br />

<div id="fuck">
	<% @pictures.each do |p| %>
		<div id="show-event-in">
			
			<%= link_to image_tag(p.picture.url(:thumb), :border => 0), p.picture.url(:large), :title => p.name %>
           
			<br />
			<p class="name-foto"><%= p.name %></p>
		</div>
	<% end %>
</div>
<div class="clear">
	
</div>

<div id="links">
	<%= voltar %>
</div>

