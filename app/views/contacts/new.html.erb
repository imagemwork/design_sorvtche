<%- selected(:contato) %>

<h3 class="titles_index">Contate-nos</h3>
<br />

<div id="new-contact">
	<% form_for(@contact) do |f| %>
	
	<div id="validacao-contact">
		
		<p><%= f.error_messages %></p>
		<div id="logo-contato">
			<%= image_tag("logo.jpg") %>
			<p align="center">Sorvtche 2010 - Rua do comercio, 96</p>
		</div>
		
	</div>
	
	<div id="formulario-contact">
	  <p>
	    <%= f.label :nome %><br />
	    <%= f.text_field :nome, :class => "input-text" %>
	  </p>
	  <p>
	    <%= f.label :assunto %><br />
	    <%= f.text_field :assunto, :class => "input-text" %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email, :class => "input-text" %>
	  </p>
	  <p>
	    <%= f.label :mensagem %><br />
	    <%= f.text_area :mensagem, :class => "input-text", :rows => 10, :style => "overflow: auto;" %>
	  </p>
		<br />
	  <p>
	    <%= f.submit 'Enviar', :class => "button-login" %>
	  </p>
	
	</div>

	
	
	<% end %>
	
</div>

<br />
<%= image_tag("arrow.png", :class=> "align-arrow") %>
<%= link_to 'Voltar', home_index_path, :class => "style-link-recipe" %>